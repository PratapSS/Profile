        android:clickable="true"
        android:elevation="4dp"
        android:padding="20dp"
        android:text="Android Profile UI Design" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
